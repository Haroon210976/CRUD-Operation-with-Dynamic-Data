<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Form</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-zinc-900 min-h-screen flex items-center justify-center">

  <!-- Navigation Bar -->
  <nav class="absolute top-0 left-0 right-0 p-4 bg-zinc-800 shadow-lg">
    <div class="container mx-auto text-center">
      <a href="/read" class="text-white text-lg font-semibold hover:text-zinc-300">View All Users</a>
    </div>
  </nav>

  <!-- Form Container -->
  <div class="bg-zinc-800 p-8 rounded-lg shadow-lg w-full max-w-md mt-24">
    <h1 class="text-2xl font-bold text-white text-center mb-6">Create User</h1>

    <!-- Form -->
    <form action="/create" method="POST" class="space-y-4">
      <!-- Username Field -->
      <div>
        <label for="username" class="block text-sm font-medium text-zinc-400">Username</label>
        <input type="text" id="username" name="name" class="mt-1 block w-full p-3 rounded-md bg-zinc-700 border-zinc-600 text-white focus:ring-2 focus:ring-zinc-400 focus:border-transparent">
      </div>

      <!-- Email Field -->
      <div>
        <label for="email" class="block text-sm font-medium text-zinc-400">Email</label>
        <input type="email" id="email" name="email" class="mt-1 block w-full p-3 rounded-md bg-zinc-700 border-zinc-600 text-white focus:ring-2 focus:ring-zinc-400 focus:border-transparent">
      </div>

      <!-- Image URL Field -->
      <div>
        <label for="imageURL" class="block text-sm font-medium text-zinc-400">Image URL</label>
        <input type="text" id="imageURL" name="image" class="mt-1 block w-full p-3 rounded-md bg-zinc-700 border-zinc-600 text-white focus:ring-2 focus:ring-zinc-400 focus:border-transparent">
      </div>

      <!-- Submit Button -->
      <div class="text-center">
        <button type="submit" class="w-full py-3 rounded-md bg-zinc-600 text-white hover:bg-zinc-500 font-semibold">Submit</button>
      </div>
    </form>
  </div>

</body>
</html>
