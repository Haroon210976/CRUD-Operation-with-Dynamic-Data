<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Cards</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-zinc-900 min-h-screen p-8">

  <!-- Navigation Bar -->
  <nav class="absolute top-0 left-0 right-0 p-4 bg-zinc-800 shadow-lg">
    <div class="container mx-auto text-center">
      <a href="/" class="text-white text-lg font-semibold hover:text-zinc-300">Create User</a>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="mt-24">
    <h1 class="text-3xl font-bold text-white text-center mb-10">User Cards</h1>

    <!-- User Cards Container -->
    <div class="flex flex-wrap justify-center gap-6">

      <!-- Example Card (Repeat for each user) -->
        <% if(users.length > 0 ){ %>
            <% users.forEach((user)=>{ %>
                <div class="bg-zinc-800 rounded-lg shadow-lg p-6 max-w-sm w-full md:w-1/3 lg:w-1/4">
                    <img src="<%= user.image %>" alt="User Image" class="rounded-md w-72 h-72 mx-auto mb-4 object-cover shadow-md">
                    <h2 class="text-xl font-semibold text-white text-center mb-2"><%= user.name %></h2>
                    <p class="text-sm text-zinc-400 text-center mb-4"><%= user.email %></p>
            
                    <!-- Buttons -->
                    <div class="flex justify-between">
                      <a href="/edit/<%= user._id %>" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-500">Edit</a>
                      <a href="delete/<%= user._id %>" class="bg-red-600 text-white px-4 py-2 rounded hover:bg-red-500">Delete</a>
                    </div>
                  </div>
            <% }) %>
        <% }else{ %>
            <h1 class="text-3xl font-medium text-zinc-400 text-center mb-10" >no users!</h1>
        <% } %>



     


    </div>
  </div>

</body>
</html>
